<?xml version="1.0"?>
<clientConfig version="1.2">
  <emailProvider id="sunrise.ch">
    <domain>sunrise.ch</domain>
    <displayName>Sunrise</displayName>
    <displayShortName>Sunrise</displayShortName>
    <incomingServer type="imap">
      <hostname>imap.sunrise.ch</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
