<?xml version="1.0"?>
<clientConfig version="1.2">
  <emailProvider id="bell.net">
    <domain>bell.net</domain>
    <domain>bellaliant.net</domain>
    <domain>sympatico.ca</domain>
    <domain>nbnet.nb.ca</domain>
    <displayName>Bell</displayName>
    <displayShortName>Bell</displayShortName>
    <incomingServer type="imap">
      <hostname>imap.bell.net</hostname>
      <port>143</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>pophm.sympatico.ca</hostname>
      <port>110</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>smtphm.sympatico.ca</hostname>
      <port>465</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <documentation url="https://support.bell.ca/internet/email/how-to-use-bell-mail?step=5#step5"/>
    <!--Please note that access to your bell.net, bellaliant.net or sympatico.ca email via an email client like Outlook (Windows) or Apple Mail (macOS) is currently restricted to and will only work in the following countries:

    Australia
    Bahamas
    Canada
    France
    Germany
    Iceland
    Ireland
    Italy
    Portugal
    Saint Pierre and Miquelon
    Spain
    United Kingdom
    United States-->
  </emailProvider>
</clientConfig>