<?xml version="1.0"?>
<clientConfig version="1.2">
  <emailProvider id="zoho.com">
    <domain>zoho.com</domain>
    <displayName>Zoho Mail</displayName>
    <displayShortName>Zoho Mail</displayShortName>
    <incomingServer type="imap">
      <hostname>imap.zoho.com</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="imap">
      <hostname>imap.zoho.com</hostname>
      <port>143</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>pop.zoho.com</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>pop.zoho.com</hostname>
      <port>110</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>smtp.zoho.com</hostname>
      <port>465</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <outgoingServer type="smtp">
      <hostname>smtp.zoho.com</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <enable visitURL="https://www.zoho.com/es-xl/mail/help/adminconsole/two-factor-authentication.html#alink5"/>
    <documentation url="https://www.zoho.com/es-xl/mail/help/imap-access.html"/>
    <documentation url="https://www.zoho.com/es-xl/mail/help/pop-access.html"/>
    <!--For free users-->
  </emailProvider>
</clientConfig>