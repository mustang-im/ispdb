<?xml version="1.0"?>
<clientConfig version="1.2">
  <emailProvider id="libero.it">
    <domain>libero.it</domain>
    <domain>inwind.it</domain>
    <domain>iol.it</domain>
    <domain>giallo.it</domain>
    <domain>blu.it</domain>
    <displayName>Libero</displayName>
    <displayShortName>Libero</displayShortName>
    <incomingServer type="imap">
      <hostname>imapmail.libero.it</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="imap">
      <hostname>imapmail.libero.it</hostname>
      <port>143</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>popmail.libero.it</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>popmail.libero.it</hostname>
      <port>110</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>smtp.libero.it</hostname>
      <port>465</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <outgoingServer type="smtp">
      <hostname>smtp.libero.it</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <documentation url="https://aiuto.libero.it/articolo/mail/parametri-di-configurazione-per-il-client-di-posta/"/>
    <documentation url="https://aiuto.libero.it/articolo/tutorial/configurazione-mozilla-thunderbird-per-libero-mail/"/>
  </emailProvider>
</clientConfig>