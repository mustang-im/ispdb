      <hostname>smtp.cogeco.ca</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <documentation url="https://support.cogeco.ca/hc/en-ca/articles/360059891913-How-do-I-set-up-my-Cogeco-email-account-in-other-email-clients"/>
