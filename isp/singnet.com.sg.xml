<?xml version="1.0"?>
<clientConfig version="1.2">
  <emailProvider id="singnet.com.sg">
    <domain>singnet.com.sg</domain>
    <displayName>SingTel</displayName>
    <displayShortName>SingTel</displayShortName>
    <incomingServer type="imap">
      <hostname>imap.singnet.com.sg</hostname>
      <port>143</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>pop3.singnet.com.sg</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>pop.singnet.com.sg</hostname>
      <port>110</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>smtp.singnet.com.sg</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <documentation url="https://www.singtel.com/business/support/userguide-singnet-mail"/>
  </emailProvider>
</clientConfig>