<?xml version="1.0"?>
<clientConfig version="1.2">
  <emailProvider id="o2.pl">
    <domain>o2.pl</domain>
    <displayName>o2</displayName>
    <displayShortName>o2</displayShortName>
    <incomingServer type="imap">
      <hostname>poczta.o2.pl</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>poczta.o2.pl</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>poczta.o2.pl</hostname>
      <port>465</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <documentation url="https://pomoc.o2.pl/jak-skonfigurowac-program-pocztowy"/>
  </emailProvider>
</clientConfig>