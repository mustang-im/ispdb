<?xml version="1.0"?>
<clientConfig version="1.2">
  <emailProvider id="vodafonemail.de">
    <domain>arcor.de</domain>
    <domain>kabelmail.de</domain>
    <domain>unitybox.de</domain>
    <domain>vodafonemail.de</domain>
    <domain>vodafone.de</domain>
    <domain>kabelbw.de</domain>
    <displayName>Vodafone</displayName>
    <displayShortName>Vodafone</displayShortName>
    <incomingServer type="imap">
      <hostname>imap.vodafonemail.de</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="imap">
      <hostname>imap.vodafonemail.de</hostname>
      <port>143</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>pop3.vodafonemail.de</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>pop3.vodafonemail.de</hostname>
      <port>110</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>smtp.vodafonemail.de</hostname>
      <port>465</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <outgoingServer type="smtp">
      <hostname>smtp.vodafonemail.de</hostname>
      <port>587</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <documentation url="https://www.vodafone.de/hilfe/vodafone-e-mail-cloud.html?tab=servereinstellungen"/>
    <!--Ports for inbox IMAP  SSL: 993 / TLS: 143
Ports for inbox POP3 	SSL: 995 / TLS: 110
Ports for outgoing mail 	SSL: 465 / TLS: 25 or 587-->
  </emailProvider>
</clientConfig>