<?xml version="1.0"?>
<clientConfig version="1.2">
  <emailProvider id="virgilio.it">
    <domain>virgilio.it</domain>
    <displayName>Virgilio Mail</displayName>
    <displayShortName>Virgilio Mail</displayShortName>
    <incomingServer type="imap">
      <hostname>in.virgilio.it</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="imap">
      <hostname>in.virgilio.it</hostname>
      <port>143</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>in.virgilio.it</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>in.virgilio.it</hostname>
      <port>110</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>out.virgilio.it</hostname>
      <port>465</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <documentation url="https://aiuto.virgilio.it/articolo/mail/parametri-di-configurazione-per-il-client-di-posta/"/>
  </emailProvider>
</clientConfig>