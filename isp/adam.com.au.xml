<?xml version="1.0"?>
<clientConfig version="1.2">
  <emailProvider id="adam.com.au">
    <domain>adam.com.au</domain>
    <displayName>Adam Internet</displayName>
    <displayShortName>Adam Internet</displayShortName>
    <incomingServer type="imap">
      <hostname>securemail.adam.com.au</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>securemail.adam.com.au</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>securemail.adam.com.au</hostname>
      <port>465</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <documentation url="https://www.adam.com.au/about/announcements/viewer?customer-news/secure-email"/>
    <!--Plain IMAP Settings Server Name: mail.adam.com.au Port: 143-->
  </emailProvider>
</clientConfig>