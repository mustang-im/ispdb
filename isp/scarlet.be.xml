<?xml version="1.0"?>
<clientConfig version="1.2">
  <emailProvider id="scarlet.be">
    <domain>scarlet.be</domain>
    <displayName>Scarlet</displayName>
    <displayShortName>Scarlet</displayShortName>
    <incomingServer type="imap">
      <hostname>imap.scarlet.be</hostname>
      <port>993</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="imap">
      <hostname>imap.scarlet.be</hostname>
      <port>143</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>pop.scarlet.be</hostname>
      <port>995</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <incomingServer type="pop3">
      <hostname>pop.scarlet.be</hostname>
      <port>110</port>
      <socketType>STARTTLS</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </incomingServer>
    <outgoingServer type="smtp">
      <hostname>relay.scarlet.be</hostname>
      <port>465</port>
      <socketType>SSL</socketType>
      <username>%EMAILADDRESS%</username>
      <authentication>password-cleartext</authentication>
    </outgoingServer>
    <documentation url="https://www.scarlet.be/scarlet-support/en/id_sfaqr_email_config/personal/support/internet/e-mail-website/e-mail-setup/configure-email-on-another-device.html"/>
  </emailProvider>
</clientConfig>